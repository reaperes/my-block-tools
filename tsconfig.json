{
  "compilerOptions": {
    "declaration": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "target": "es2020",
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "types": [
      "node"
    ],
    "baseUrl": ".",
    "paths": {
      "@src/*": [
        "./src/*"
      ],
      "@contract-lib/*": [
        "./contract-lib/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./**/*.ts"
  ]
}
